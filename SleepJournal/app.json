{
  "expo": {
    "name": "SleepJournal",
    "slug": "SleepJournal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sleepjournal",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.sleepjournal", 
      "usesHealthKit": true, 
      "infoPlist": { 
        "NSHealthShareUsageDescription": "SleepJournal needs to read your sleep data from Apple Health to provide comprehensive sleep tracking and insights.",
        "NSHealthUpdateUsageDescription": "SleepJournal will write your recorded sleep sessions to Apple Health to keep your health data synchronized."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.sleep.sleepjournal" 
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-health-kit" 
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}